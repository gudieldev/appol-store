<section class="reset_password">
	<div class="container">
		<div class="row">
			<div class="col-12" style="margin: 5vh 0 10vh 0;">
				<div class="heading mt-5">
					<h1 class="mb-4">My Addresses :]</h1>
					<p class="mb-4">{% render 'appol-icon-account' %} <a href="{{ routes.account_url }}">Return to Account Details</a></p>

					<!-- Button trigger modal -->
					<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newAddress">
						New Address
					</button>
					
					<!-- Modal -->
					<div class="modal fade" id="newAddress" tabindex="-1" aria-labelledby="newAddressLabel" aria-hidden="true">
						<div class="modal-dialog">
							<div class="modal-content">
								<div class="modal-header">
									<h5 class="modal-title" id="newAddressLabel">Modal title</h5>
									<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
								</div>
								{% form 'customer_address', customer.new_address %}
									<div class="modal-body">
										<div class="row">
											<div class="col-12 col-md-6">
												<div class="form-floating mb-3">
													<input type="text" name="address[first_name]" value="{{ address.first_name }}" class="form-control" id="firstName" placeholder="First Name">
													<label for="firstName">First Name</label>
												</div><!-- /.form-floating -->
											</div>
											<div class="col-12 col-md-6">
												<div class="form-floating mb-3">
													<input type="text" name="address[last_name]" value="{{ address.last_name }}" class="form-control" id="lastName" placeholder="Last Name">
													<label for="lastName">Last Name</label>
												</div><!-- /.form-floating -->
											</div>
											<div class="col-12">
													<div class="form-floating mb-3">
														<input type="text" name="address[company]" value="{{ address.company }}" class="form-control" id="company" placeholder="Company">
														<label for="company">Company</label>
													</div><!-- /.form-floating -->
											</div>
											<div class="col-12 col-md-6">
												<div class="form-floating mb-3">
													<input type="text" name="address[address1]" value="{{ address.address1 }}" class="form-control" id="address1" placeholder="Address 1">
													<label for="address1">Address 1</label>
												</div><!-- /.form-floating -->
											</div>
											<div class="col-12 col-md-6">
												<div class="form-floating mb-3">
													<input type="text" name="address[address2]" value="{{ address.address2 }}" class="form-control" id="address2" placeholder="Address 2">
													<label for="address2">Address 1</label>
												</div><!-- /.form-floating -->
											</div>

											<div class="col-12 col-md-6">
												<div class="form-floating mb-3">
													<input type="text" name="address[city]" value="{{ address.city }}" class="form-control" id="city" placeholder="City">
													<label for="city">City</label>
												</div><!-- /.form-floating -->
											</div>
											<div class="col-12 col-md-6">
												<div class="form-floating mb-3">
													<input type="text" name="address[zip]" value="{{ address.zip }}" class="form-control" id="zip" placeholder="ZIP/Postal Code">
													<label for="zip">ZIP/Postal Code</label>
												</div><!-- /.form-floating -->
											</div>
											<div class="col-12">
												<div class="form-floating mb-3">
													<input type="tel" name="address[phone]" value="{{ address.phone }}" class="form-control" id="phone" placeholder="Phone">
													<label for="phone">Phone</label>
												</div><!-- /.form-floating -->
											</div>
										</div><!-- /.row -->

									</div><!-- /.modal-body -->

									<div class="modal-footer">
										<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
										<button type="submit" class="btn btn-primary">Save Address</button>
									</div><!-- /.modal-footer -->
								{% endform %}
							</div>
						</div>
					</div>
				</div><!-- /.heading -->
			</div><!-- /.col -->
			<div class="col-12 col-md-10 mx-auto">
				<div class="row">
					{% paginate customer.addresses by 8 %}
						{% for address in customer.addresses %}
							<div class="col-12 col-md-6 col-lg-4">
								<div class="card w-100">
									<div class="card-body">
										{{ address | format_address }}
										
										<a href="#" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#editAddressModal{{ forloop.index }}">Edit Address</a>
										<form class="address-delete-form" method="post" action="/account/addresses/{{ address.id }}">
											<input type="hidden" name="_method" value="delete">
											<button type="submit" class="btn btn-sm btn-danger">Delete Address</button>
										</form>
									</div>
								</div>
							</div>

							<!-- Modal -->
							<div class="modal fade" id="editAddressModal{{ forloop.index }}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
								<div class="modal-dialog">
									<div class="modal-content">
										<div class="modal-header">
											<h5 class="modal-title" id="exampleModalLabel">Edit Address</h5>
											<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
										</div>

										{% form 'customer_address', address %}
											<div class="modal-body">
												<div class="row">
													<div class="col-12 col-md-6">
														<div class="form-floating mb-3">
															<input type="text" name="address[first_name]" value="{{ address.first_name }}" class="form-control" id="firstName" placeholder="First Name">
															<label for="firstName">First Name</label>
														</div><!-- /.form-floating -->
													</div>
													<div class="col-12 col-md-6">
														<div class="form-floating mb-3">
															<input type="text" name="address[last_name]" value="{{ address.last_name }}" class="form-control" id="lastName" placeholder="Last Name">
															<label for="lastName">Last Name</label>
														</div><!-- /.form-floating -->
													</div>
													<div class="col-12">
														<div class="form-floating mb-3">
															<input type="text" name="address[company]" value="{{ address.company }}" class="form-control" id="company" placeholder="Company">
															<label for="company">Company</label>
														</div><!-- /.form-floating -->
													</div>
													<div class="col-12 col-md-6">
														<div class="form-floating mb-3">
															<input type="text" name="address[address1]" value="{{ address.address1 }}" class="form-control" id="address1" placeholder="Address 1">
															<label for="address1">Address 1</label>
														</div><!-- /.form-floating -->
													</div>
													<div class="col-12 col-md-6">
														<div class="form-floating mb-3">
															<input type="text" name="address[address2]" value="{{ address.address2 }}" class="form-control" id="address2" placeholder="Address 2">
															<label for="address2">Address 1</label>
														</div><!-- /.form-floating -->
													</div>

													<div class="col-12 col-md-6">
														<div class="form-floating mb-3">
															<input type="text" name="address[city]" value="{{ address.city }}" class="form-control" id="city" placeholder="City">
															<label for="city">City</label>
														</div><!-- /.form-floating -->
													</div>
													<div class="col-12 col-md-6">
														<div class="form-floating mb-3">
															<input type="text" name="address[zip]" value="{{ address.zip }}" class="form-control" id="zip" placeholder="ZIP/Postal Code">
															<label for="zip">ZIP/Postal Code</label>
														</div><!-- /.form-floating -->
													</div>
													<div class="col-12">
														<div class="form-floating mb-3">
															<input type="tel" name="address[phone]" value="{{ address.phone }}" class="form-control" id="phone" placeholder="Phone">
															<label for="phone">Phone</label>
														</div><!-- /.form-floating -->
													</div>
												</div><!-- /.row -->

											</div><!-- /.modal-body -->

											<div class="modal-footer">
												<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
												<button type="submit" class="btn btn-primary">Save changes</button>
											</div><!-- /.modal-footer -->
										{% endform %}
									</div>
								</div>
							</div>
						{% endfor %}
					{% endpaginate %}
				</div>
			</div>
		</div><!-- /.row -->
	</div><!-- /.container -->
</section><!-- /.reset_password -->