<div class="card">
	<div class="featured-image">
		{{ product.featured_image | image_url: width: 570 | image_tag }}
	</div>
	<div class="card-body">
		<h4>{{ product.price | money_with_currency }}</h4>
		<a href="{{ product.url }}"><h5 class="card-title">{{ product.title }}</h5></a>
		<a href="#" class="btn btn-danger">View details</a>
	</div><!-- /.card-body -->
</div><!-- /.card -->