<div class="container">

	{% for block in section.blocks %}
		{% case block.type %}
			{% when 'announcement' %}
				<div class="alert alert-primary {{ block.settings.text_alignment }}" role="alert">
					{{ block.settings.announcement_text }}
				</div><!-- /.alert -->
		{% endcase %}
	{% endfor %}

</div><!-- /.container -->

{% schema %}
{
	"name": "Announcement Bar",
	"tag": "section",
	"class": "section-announcement-bar",
	"settings": [
		{
			"type": "select",
			"id": "heading_type",
			"label": "Heading Type",
			"options": [
				{
					"value": "h1",
					"label": "Heading 1"
				},
				{
					"value": "h2",
					"label": "Heading 2"
				}
			],
			"default": "h1"
		}
	],
	"blocks": [
		{
			"name": "Announcement",
			"type": "announcement",
			"settings": [
				{
					"type": "text",
					"id": "announcement_text",
					"label": "Text",
					"default": "Hola Mundo"
				},
				{
					"type": "select",
					"id": "text_alignment",
					"label": "Text Alignment",
					"options": [
						{
							"value": "text-start",
							"label": "Left"
						},
						{
							"value": "text-center",
							"label": "Center"
						},
						{
							"value": "text-end",
							"label": "Right"
						}
					],
					"default": "text-start"
				}
			]
		}
	]
}
{% endschema %}