<section>
	<div class="container">
	<h1 class="display-1 bg-danger rounded-pill d-inline-block py-3 px-5 text-white">Featured Collection</h1>
		<div class="row">
			{% for index in (1..2) %}
				{% for card in (1..6) %}
					<div class="col-12 col-sm-6 col-md-4 col-lg-3">
						<div class="card mb-3">
							{{ 'product-' | append: card | placeholder_svg_tag: 'card-img-top' }}
							<div class="card-body">
								<h4>200.00 QGT</h4>
								<a href="#0"><h5 class="card-title">Mochila de Dora la Exploradora {{ card }}</h5></a>
								<a href="#" class="btn btn-primary">View details {{ card }}</a>
							</div><!-- /.card-body -->
						</div><!-- /.card -->
					</div><!-- /.col-12 -->
				{% endfor %}
			{% endfor %}
		</div><!-- /.row -->
	</div><!-- /.container -->
</section><!-- /.section -->