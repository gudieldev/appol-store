<div class="container">
	<div class="row">
		{% for block in section.blocks %}
			<div class="col-12 col-sm-6 col-md-4 col-lg-3">
				{% if block.type == 'text_block' %}
					<h5>{{ block.settings.heading }}</h5>
					<p>{{ block.settings.content }}</p>
				{% elsif block.type == 'footer_image' %}
					<div class="footer_image featured-image bg-light object-fit-cover ">
						{% if block.settings.image == blank %}
							{{ 'image' | placeholder_svg_tag }}
						{% else %}
							{{ block.settings.image | image_url: width: 570 | image_tag }}
						{% endif %}
					</div>
				{% elsif block.type == 'footer_menu' %}
					<h5>{{ block.settings.heading }}</h5>
					{% if block.settings.menu.links.size > 0 %}
						<ul>
							{% for link in block.settings.menu.links %}
								<li><a href="{{ link.url }}">{{ link.title }}</a></li>
							{% endfor %}
						</ul><!-- /.ul -->
					{% endif %}
				{% endif %}
			</div><!-- /.col -->
		{% endfor %}
	</div><!-- /.row -->
</div><!-- /.container -->

{% schema %}
	{
		"name": "Appol Footer",
		"tag": "footer",
		"class": "my-5",
		"blocks": [
			{
				"name": "Text Block",
				"type": "text_block",
				"settings": [
					{
						"type": "text",
						"id": "heading",
						"label": "Heading",
						"default": "Heading example"
					},
					{
						"type": "textarea",
						"id": "content",
						"label": "Content",
						"default": "<p>This is an example of the text content.</p>"
					}
				]
			},
			{
				"name": "Footer Image",
				"type": "footer_image",
				"settings": [
					{
						"type": "image_picker",
						"id": "image",
						"label": "Image"
					}
				]
			},
			{
				"name": "Footer Menu",
				"type": "footer_menu",
				"settings": [
					{
						"type": "text",
						"id": "heading",
						"label": "Heading",
						"default": "Menu Title"
					},
					{
						"type": "link_list",
						"id": "menu",
						"label": "Menu",
						"default": "main-menu"
					}
				]
			}
		]
	}
{% endschema %}