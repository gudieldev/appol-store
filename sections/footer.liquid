<footer class="pb-5">
	<div class="container">
		<div class="row">
			{% for block in section.blocks %}
				{% if block.type == 'text_block' %}
					<div class="col-12 col-sm-6 col-md-4 col-lg-3">
						<h5>{{ block.settings.heading }}</h5>
						<p>{{ block.settings.content }}</p>
					</div><!-- /.col -->
				{% elsif block.type == 'footer_image' %}
					<div class="col-12 col-sm-6 col-md-4 col-lg-3">
						<div class="footer_image featured-image bg-light">
							{% if block.settings.image == blank %}
								{{ 'image' | placeholder_svg_tag }}
							{% else %}
								{{ block.settings.image | img_url | img_tag }}
							{% endif %}
						</div><!-- /.footer_image -->
					</div><!-- /.col -->
				{% elsif block.type == 'footer_menu' %}
					<div class="col-12 col-sm-6 col-md-4 col-lg-3">
						<h5>{{ block.settings.heading }}</h5>

						{% if block.settings.menu.links.size > 0 %}
							<ul>
								{% for link in block.settings.menu.links %}
									<li><a href="{{ link.url }}">{{ link.title }}</a></li>
								{% endfor %}
							</ul><!-- /.ul -->
						{% endif %}
					</div><!-- /.col -->
				{% endif %}
			{% endfor %}
		</div><!-- /.row -->
	</div><!-- /.container -->
</footer>

{% schema %}
{
	"name": "Appol Footer",
	"blocks": [
		{
			"name": "Text Block",
			"type": "text_block",
			"settings": [
				{
					"type": "text",
					"id": "heading",
					"label": "Heading",
					"default": "Heading example"
				},
				{
					"type": "textarea",
					"id": "content",
					"label": "Content",
					"default": "<p>This is an example of the text content</p>"
				}
			]
		},
		{
			"name": "Footer Image",
			"type": "footer_image",
			"settings": [
				{
					"type": "image_picker",
					"id": "image",
					"label": "Image"
				}
			]
		},
		{
			"name": "Footer Menu",
			"type": "footer_menu",
			"settings": [
				{
					"type": "text",
					"id": "heading",
					"label": "Heading",
					"default": "Menu Title"
				},
				{
					"type": "link_list",
					"id": "menu",
					"label": "Menu",
					"default": "main-menu"
				}
			]
		}
	]
}
{% endschema %}