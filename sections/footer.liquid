</div><!-- /.modal -->

{% schema %}
{
  "name": "Appol Footer",
  "tag": "footer",
  "class": "my-5",
  "blocks": [
    {
      "name": "Text Block",
      "type": "text_block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Heading example"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Content",
          "default": "<p>This is an example of the text content.</p>"
        }
      ]
    },
    {
      "name": "Footer Image",
      "type": "footer_image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    },
    {
      "name": "Footer Menu",
      "type": "footer_menu",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Menu Title"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu",
          "default": "main-menu"
        }
      ]
    }
  ]
}
{% endschema %}