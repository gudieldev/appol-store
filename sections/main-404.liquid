<style type="text/css">
  .template-404 .title + * {
    margin-top: 1rem;
  }

  @media screen and (min-width: 750px) {
    .template-404 .title + * {
      margin-top: 2rem;
    }
  }
</style>

<section>
	<div class="container">
		<div class="row">
			<div class="col-12 col-md-7 mx-auto {{ section.settings.text_alignment }}">
				<div class="display-1 mb-4">404</div>
				<h4 class="mb-5">The page you were looking for was not found :(</h4>
				<a href="{{ routes.all_products_collection_url }}" class="btn btn-outline-danger">Continue Shoping</a>
			</div>
		</div>
	</div>
</section>


{% schema %}
{
	"name": "Page Not Found",
	"settings": [
		{
			"type": "select",
			"id": "text_alignment",
			"label": "Text Alignment",
			"options": [
				{
					"label": "Left",
					"value": "text-start"
				},
				{
					"label": "Center",
					"value": "text-center"
				},
				{
					"label": "Right",
					"value": "text-end"
				}
			],
			"default": "text-center"
		}
	]
}
{% endschema %}