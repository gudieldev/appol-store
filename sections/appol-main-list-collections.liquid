<section>
	<div class="container">
		<div class="row" data-masonry='{"percentPosition": true }'>
			
			{% for collection in collections %}
				<div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
					<div class="card">
						<a href="{{ collection.url }}">
							{% if collection.image %}
								{{ collection.image | img_url: 'master' | img_tag: '', 'card-img-top' }}
							{% else %}
								{{ collection.products.first.image | img_url: 'master' | img_tag: '', 'card-img-top' }}
							{% endif %}
						</a>
						<div class="card-body">
							<a href="{{ collection.url }}">{{ collection.title }}</a>
						</div>
					</div><!-- /.card -->
				</div><!-- /.col -->
			{% endfor %}
			
		</div><!-- /.row -->
	</div><!-- /.container -->
</section><!-- /section -->