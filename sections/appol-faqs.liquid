<div class="container">
	<h1 class="display-1 bg-danger rounded-pill d-inline-block py-3 px-5 text-white mb-5">{{ section.settings.section_heading }}</h1>
	<div class="row">
		{% if section.blocks.size == 0 %}
			{% for block in (1..3) %}
				<div class="col-12 col-sm-6 col-md-4">
					<a href="#0">
						<div class="question bg-light">
							{{ 'product-4.jpg' | asset_url | img_tag }}
						</div><!-- /.question -->
					</a><!-- /a -->
					
				</div><!-- /.col -->
			{% endfor %}
		{% else %}
			{% for block in section.blocks %}
				{% case block.type %}
					{% when 'question' %}
						<div class="col-12 col-sm-6 col-md-4">
							{% unless block.settings.question_url == blank %}
								<a href="{{ block.settings.question_url }}">
							{% endunless %}
							
							<div class="question bg-light">
								{% if block.settings.question_image != blank %}
									{{ block.settings.question_image | img_url: 'medium' | img_tag: '', '' }}
								{% else %}
									{{ 'lifestyle-1' | placeholder_svg_tag }}
								{% endif %}
							</div><!-- /.question -->

							{% unless block.settings.question_url == blank %}
								</a><!-- /a -->
							{% endunless %}
							
						</div><!-- /.col -->
						
				{% endcase %}
			{% endfor %}
		{% endif %}
	</div><!-- /.row -->
</div><!-- /.container -->

{% schema %}
{
	"name": "FAQs",
	"tag": "section",
	"settings": [
		{
			"type": "text",
			"id": "section_heading",
			"label": "Section Heading",
			"default": "FAQs Default"
		}
	],
	"blocks": [
		{
			"name": "Question",
			"type": "question",
			"settings": [
				{
					"type": "image_picker",
					"id": "question_image",
					"label": "Image"
				},
				{
					"type": "url",
					"id": "question_url",
					"label": "Question URL"
				}
			]
		}
	]
}
{% endschema %}